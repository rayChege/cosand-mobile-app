        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/complete_details"
            android:background="#B8BECC" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_details"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bariol_regular"
                android:text="Type"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B8BECC" />

            <Spinner
                android:id="@+id/material_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:entries="@array/service_arrays"
                android:fontFamily="@font/bariol_bold"
                android:prompt="@string/service_prompt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/linear_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_details"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/spinnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bariol_regular"
                android:text="Material"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B8BECC" />

            <Spinner
                android:id="@+id/material_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"

                android:entries="@array/material_arrays"
                android:fontFamily="@font/bariol_bold"
                android:prompt="@string/material_prompt"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_material"
            android:layout_margin="10dp"

            android:background="@drawable/sell"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bariol_regular"
                android:text="Details"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B8BECC" />

            <Spinner
                android:id="@+id/material_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:entries="@array/details_arrays"
                android:fontFamily="@font/bariol_bold"
                android:prompt="@string/details_prompt"
                android:text="X2"
                android:textColor="#000000"
                android:textSize="20sp">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_material"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bariol_regular"
                android:text="Classes"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B8BECC" />

            <Spinner
                android:id="@+id/material_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:entries="@array/classes_arrays"
                android:fontFamily="@font/bariol_bold"
                android:prompt="@string/classes_prompt"
                android:text="20T"
                android:textColor="#000000"
                android:textSize="20sp">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_material"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bariol_regular"
                android:text="Units"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B8BECC" />

            <Spinner
                android:id="@+id/material_units"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:entries="@array/units_arrays"
                android:fontFamily="@font/bariol_bold"
                android:prompt="@string/units_prompt"
                android:text="20T"
                android:textColor="#000000"
                android:textSize="20sp">

            </Spinner>

        </LinearLayout>



        <EditText
            android:id="@+id/unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:hint="Enter Unit Cost"
            android:inputType="number"
            android:padding="@dimen/_10sdp" />
        <EditText
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sell"
            android:hint="Enter Location Address"
            android:inputType="text"
            android:padding="@dimen/_10sdp" />


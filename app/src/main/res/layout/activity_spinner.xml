<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buy_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/complete_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#26173470"
        android:fontFamily="@font/bariol_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="New Order"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_material"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/complete_details"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sell">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/bariol_regular"
            android:text="Material"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B8BECC" />

        <Spinner
            android:id="@+id/buy_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:fontFamily="@font/bariol_bold"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_quality"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_material"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sell">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/bariol_regular"
            android:text="Quality"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B8BECC" />

        <Spinner
            android:id="@+id/buy_spinner_quality"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:fontFamily="@font/bariol_bold"
            android:textColor="#000000"
            android:textSize="20sp">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_quantity"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_quality"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sell">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/bariol_regular"
            android:text="Quantity"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B8BECC" />

        <Spinner
            android:id="@+id/buy_spinner_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:fontFamily="@font/bariol_bold"
            android:textColor="#000000"
            android:textSize="20sp">

        </Spinner>

    </LinearLayout>


    <!-- <Button
         android:layout_below="@+id/linear_quantity"
         android:id="@+id/proceed_buy"
         android:layout_width="236dp"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="246dp"
         android:background="@drawable/proceed_button"
         android:fontFamily="@font/bariol_bold"
         android:text="Proceed"
         android:textAllCaps="false"
         android:textColor="#ffffff"
         android:textSize="20sp"
         android:textStyle="bold" />-->

    <Button
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/proceed_button"
        android:fontFamily="@font/bariol_bold"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/proceed_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Proceed"
        android:textAllCaps="false" />

</RelativeLayout>
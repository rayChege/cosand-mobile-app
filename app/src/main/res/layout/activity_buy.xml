<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff"
    tools:context="wizag.com.supa.BuyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#173470">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="BUY"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/your_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/bariol_bold"
            android:textColor="#000000"
            android:text="NEW ORDER"
            android:textSize="30sp"/>

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/your_order"/>

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_order"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="material"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/item"/>

    <TextView
        android:id="@+id/buy_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="quantity"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/buy_quantity"/>

    <TextView
        android:id="@+id/buy_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_quantity"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="quality"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/buy_quality"/>

    <TextView
        android:id="@+id/buy_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_quality"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="unit price"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/buy_unit_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_quality"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#B36592"
        android:text="$45"
        android:textStyle="bold"
        android:textSize="25sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/buy_unit_price"/>

    <TextView
        android:id="@+id/buy_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_unit_price"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="delivery date"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/buy_date"/>

    <TextView
        android:id="@+id/buy_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_date"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="delivery location"
        android:textStyle="bold"
        android:textSize="20sp"/>

        <Button
            android:id="@+id/make_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#173470"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buy_location"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="MAKE ORDER"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />


</RelativeLayout>

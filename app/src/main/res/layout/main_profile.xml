<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/complete_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/bariol_bold"
        android:background="#26173470"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Profile"/>

    <View
        android:id="@+id/first_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/complete_details"
        android:background="#B8BECC"/>

    <ImageView
        android:id="@+id/truck_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/first_view"
        android:scaleType="centerCrop"
        android:src="@drawable/truck11"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#1AEFECE7"
        android:layout_below="@id/complete_details"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="208dp"
        android:padding="7dp"
        android:background="#8000"
        android:layout_below="@id/complete_details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="KCA 123K"/>

    <ImageView
        android:id="@+id/driver_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/female_drive"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/driver_image"
        android:padding="10dp"
        android:fontFamily="@font/bariol_bold"
        android:text="Name: Susan Wanja Kamau"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <View
        android:id="@+id/view1_profile"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/profile_name"/>

    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view1_profile"
        android:padding="10dp"
        android:fontFamily="@font/bariol_bold"
        android:text="Phone: 0700111345"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <View
        android:id="@+id/view2_profile"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_below="@id/profile_phone"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view2_profile"
        android:padding="10dp"
        android:fontFamily="@font/bariol_bold"
        android:text="Email: susanwanja@gmail.com"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/proceed_button"
        android:layout_below="@id/profile_email"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bariol_bold"
        android:text="Edit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>

</RelativeLayout>
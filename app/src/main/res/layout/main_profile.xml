<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Profile"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_22sdp" />

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/truck_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:scaleType="centerCrop"
                android:src="@drawable/truck11" />

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/complete_details"
                android:background="#1AEFECE7" />

            <ImageView
                android:id="@+id/driver_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="240dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/female_drive" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/driver_image"
                android:fontFamily="@font/bariol_bold"
                android:padding="10dp"
                android:text="Name: Susan Wanja Kamau"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1_profile"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/profile_name"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/view1_profile"
                android:fontFamily="@font/bariol_bold"
                android:padding="10dp"
                android:text="Phone: 0700111345"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view2_profile"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/profile_phone"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/view2_profile"
                android:fontFamily="@font/bariol_bold"
                android:padding="10dp"
                android:text="Email: susanwanja@gmail.com"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/proceed_button"
                android:fontFamily="@font/bariol_bold"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->


</LinearLayout>

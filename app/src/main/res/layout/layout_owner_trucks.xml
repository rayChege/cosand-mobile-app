<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyish"
            android:scaleType="centerCrop"
            android:orientation="vertical"
            android:weightSum="3">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Truck Details"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/_28sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plate no :"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <EditText android:id="@+id/plate_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColorHint="@color/textColor"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tonnage :"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <EditText
                android:id="@+id/tonnage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColorHint="@color/textColor"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make :"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <EditText android:id="@+id/make"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColorHint="@color/textColor"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model :"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <EditText
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColorHint="@color/textColor"
                android:padding="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year :"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_25sdp"
                />

            <EditText android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:focusable="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textColorHint="@color/textColor"
                android:padding="8dp"
                />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

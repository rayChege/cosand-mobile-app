<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/sell"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:drawableStart="@android:drawable/ic_menu_camera"
            android:drawableTint="@color/colorPrimary"
            android:fontFamily="@font/bariol_bold"
            android:onClick="uploadDL"
            android:padding="@dimen/_10sdp"
            android:text="Upload Image of Driving Licence"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dl_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_16sdp" />

        </LinearLayout>

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_25sdp"
            android:text="DL Endorsements :"
            android:textAlignment="viewStart"
            android:textColor="@color/textColor"
           />

        <EditText
            android:lines="3"
            android:id="@+id/endorsements"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:inputType="textCapCharacters"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="@color/textColor"
            android:textAlignment="textStart"
           />

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_25sdp"
            android:text="Sacco Name:"
            android:textAlignment="viewStart"
            android:textColor="@color/textColor"
            />

        <EditText
            android:lines="3"
            android:id="@+id/sacco_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:inputType="textCapCharacters"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textColor="@color/textColor" />


        <TextView
            android:textSize="20sp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_25sdp"
            android:text="Member Sacco Number:"
            android:textAlignment="viewStart"
            android:textColor="@color/textColor"
            />

        <EditText
            android:lines="3"
            android:id="@+id/sacco_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:inputType="textCapCharacters"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/previous_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/next"
                android:layout_alignBottom="@+id/next"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Previous"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_margin="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>